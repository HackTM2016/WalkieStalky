<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns:local="clr-namespace:WalkieStalky;assembly=WalkieStalky"
             x:Class="WalkieStalky.Views.MapPage"
             BindingContext="{x:Static local:App.MapPageViewModel}">
  <ContentPage.Resources>
    <ResourceDictionary>
      <Style x:Key="LoginButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#2A49A5" />
        <Setter Property="BorderRadius" Value="3"></Setter>
        <Setter Property="BorderColor" Value="#082783"></Setter>
        <Setter Property="TextColor" Value="White"></Setter>
        <Setter Property="FontSize" Value="12"></Setter>
      </Style>

    </ResourceDictionary>

  </ContentPage.Resources>
  <StackLayout Spacing="0">
    <maps:Map WidthRequest="960" HeightRequest="100"
        x:Name="MyMap"
        IsShowingUser="true"
        MapType="Street"
        VerticalOptions="FillAndExpand"
        />
    <Button Command="{Binding TopicsCommand}"
            CommandParameter="{Binding NavigationService}"
           Style="{StaticResource LoginButtonStyle}"
               Text="To topics"/>
  </StackLayout>
</ContentPage>